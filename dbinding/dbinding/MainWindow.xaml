<Window x:Class="dbinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dbinding"
        mc:Ignorable="d"
        Title="MainWindow" Background="LightBlue" Height="300" Width="400">
    <Grid>
        <Label Foreground="DarkMagenta" x:Name="lblname" Content=" Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Margin="10,43,0,0"/>
        <Label Foreground="DarkMagenta" x:Name="lblmarks" Content="Marks" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Margin="10,130,0,0"/>
        <TextBox x:Name="txtname" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" Text="{Binding Uname, Mode=OneWay}" VerticalAlignment="Top" Width="158" Margin="198,43,0,0"/>
        <TextBox x:Name="txtmark" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" Text="{Binding Umarks,  Mode=OneWay}" VerticalAlignment="Top" Width="158" Margin="198,130,0,0"/>
        <Button Foreground="Green" x:Name="btnclick" Content="Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="198,204,0,0" Click="btnclick_Click"/>

    </Grid>
</Window>
